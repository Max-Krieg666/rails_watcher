<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th><%= t('rails_watcher.events.id') %></th>
      <th><%= t('rails_watcher.events.title') %></th>
      <th><%= t('rails_watcher.events.status') %></th>
      <th><%= t('rails_watcher.events.type') %></th>
      <th><%= t('rails_watcher.events.user_login') %></th>
      <th><%= t('rails_watcher.events.user_ip') %></th>
      <th><%= t('rails_watcher.navigation.actions') %></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.id %><td>
        <td><%= event.title %><td>
        <td><%= event.status %><td>
        <td><%= event.type %><td>
        <td><%= event.user_login %><td>
        <td><%= event.show_ip %><td>
        <td><%= link_to t('rails_watcher.navigation.details'), event %><td>
      </tr>
    <% end %>
  </tbody>
</table>
