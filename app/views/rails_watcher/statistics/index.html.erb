      <%= @monthly_manual %>
    </div>
    <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: <%= @monthly_automatical_percentage %>%" title="Автоматические события">
      <%= @monthly_automatical %>
    </div>
  </div>
  <br>
  <h3>YEARLY</h3>
