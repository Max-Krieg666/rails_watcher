<div>
  <h3>DAILY</h3>
  Всего событий за сутки:
  <%= @daily[:full_count] %>
  <% progress_bar_modulate_daily(@daily) %>
  <div class="progress">
    <div class="progress-bar progress-bar-success" style="width: <%= @daily_success_percentage %>%" title="Успешно">
      <%= @daily_success %>
    </div>
    <div class="progress-bar progress-bar-danger" style="width: <%= @daily_error_percentage %>%" title="Ошибка">
      <%= @daily_error %>
    </div>
  </div>
  <div class="progress">
    <div class="progress-bar progress-bar-default progress-bar-striped" style="width: <%= @daily_manual_percentage %>%" title="Пользовательские события">
      <%= @daily_manual %>
    </div>
    <div class="progress-bar progress-bar-warning progress-bar-striped" style="width: <%= @daily_automatical %>%" title="Автоматические события">
      <%= @daily_automatical %>
    </div>
  </div>
  <br>
  <h3>MONTHLY</h3>
