<h3>Events here:</h3>
<%= form_tag(new_search_path, method: "get") do %>
  <div class="form-row">
    <div class="form-group col-sm-5">
      <label for="name">Title:</label>
      <%= text_field_tag :title, params[:title], placeholder: I18n.t('rails_watcher.events.title') %>
    </div>

    <div class="form-group col-md-6">
      <label for="type">Status:</label>
      <%= text_field_tag :status, params[:status], placeholder: I18n.t('rails_watcher.events.status') %>
    </div>

    <div class="form-group col-md-6">
      <label for="type">Type:</label>
      <%= text_field_tag :type, params[:type], placeholder: I18n.t('rails_watcher.events.type') %>
    </div>

    <%= submit_tag I18n.t('rails_watcher.navigation.search'), name: nil %>
  </div>
<% end %>